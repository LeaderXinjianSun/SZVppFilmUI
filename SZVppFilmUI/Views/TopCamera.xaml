<UserControl x:Class="SZVppFilmUI.Views.TopCamera"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"                           
             xmlns:local="clr-namespace:SZVppFilmUI.Views"
             xmlns:halconviewer="clr-namespace:HalconViewer;assembly=HalconViewer"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <halconviewer:ImageViewer Visibility="{Binding HalconWindowVisibility}" Name="TopCameraImageViewer" Image="{Binding TopCameraIamge}" Repaint="{Binding TopCameraRepaint}" AutoRepaint="True" ROIList="{Binding TopCameraROIList}" AppendHObject="{Binding TopCameraAppendHObject}" GCStyle="{Binding TopCameraGCStyle}"></halconviewer:ImageViewer>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="2" Orientation="Vertical">
                <TextBlock Text="{Binding TopCameraName,StringFormat=相机名称:{0},FallbackValue=相机名称}" FontSize="24"></TextBlock>
            </StackPanel>
            <Button Grid.Column="3" Style="{StaticResource AccentedSquareButtonStyle}" Margin="10" Content="拍照" FontSize="24" Command="{Binding TopCameraFunctionCommand}"></Button>
            <Grid Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="4" Style="{StaticResource GridLoginStatus}">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource AccentedSquareButtonStyle}" Content="区域" Margin="10" FontSize="24" Command="{Binding DrawROIOperateCommand}" CommandParameter="0"></Button>
                <Button Grid.Column="1" Style="{StaticResource AccentedSquareButtonStyle}" Content="模板" Margin="10" FontSize="24" Command="{Binding CreateShapeModelOperateCommand}" CommandParameter="0"></Button>
                <Button Grid.Column="2" Style="{StaticResource AccentedSquareButtonStyle}" Content="识别" Margin="10" FontSize="24" Command="{Binding FindShapeModelOperateCommand}" CommandParameter="0"></Button>
                <Button Grid.Column="3" Style="{StaticResource AccentedSquareButtonStyle}" Content="标定" Margin="10" FontSize="24" Command="{Binding ClibOperateCommand}" CommandParameter="0" IsEnabled="{Binding ClibButtonIsEnabled}"></Button>
                <Button Grid.Row="1" Style="{StaticResource AccentedSquareButtonStyle}" Content="读取" Margin="10" FontSize="24" Command="{Binding ReadImageOperateCommand}" CommandParameter="0"></Button>
                <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource AccentedSquareButtonStyle}" Content="模板2" Margin="10" FontSize="20" Command="{Binding CreateShapeModel2}"></Button>
                <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource AccentedSquareButtonStyle}" Content="识别2" Margin="10" FontSize="20" Command="{Binding FindShapeModel2}"></Button>
                <Button Grid.Column="3" Grid.Row="1" Style="{StaticResource AccentedSquareButtonStyle}" Content="保存" Margin="10" FontSize="24" Command="{Binding SaveParamOperateCommand}" CommandParameter="0"></Button>
                
                <Grid Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="吸嘴1">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="0,1">
                                <Label Content="补偿X:" Width="50"></Label>
                                <TextBox Width="60" Text="{Binding TopCameraDiff1_X}"></TextBox>
                                <Label Content="mm"></Label>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,1">
                                <Label Content="补偿Y:" Width="50"></Label>
                                <TextBox Width="60" Text="{Binding TopCameraDiff1_Y}"></TextBox>
                                <Label Content="mm"></Label>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,1">
                                <Label Content="补偿U:" Width="50"></Label>
                                <TextBox Width="60" Text="{Binding TopCameraDiff1_U}"></TextBox>
                                <Label Content="°"></Label>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="吸嘴2">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="0,1">
                                <Label Content="补偿X:" Width="50"></Label>
                                <TextBox Width="60" Text="{Binding TopCameraDiff2_X}"></TextBox>
                                <Label Content="mm"></Label>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,1">
                                <Label Content="补偿Y:" Width="50"></Label>
                                <TextBox Width="60" Text="{Binding TopCameraDiff2_Y}"></TextBox>
                                <Label Content="mm"></Label>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,1">
                                <Label Content="补偿U:" Width="50"></Label>
                                <TextBox Width="60" Text="{Binding TopCameraDiff2_U}"></TextBox>
                                <Label Content="°"></Label>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
